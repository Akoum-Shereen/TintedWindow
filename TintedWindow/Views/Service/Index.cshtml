@{

    var permissions = ViewData["permissions"] as Dictionary<string, bool>;

    var isAddService = permissions["canAdd"];
    var isEditService = permissions["canUpdate"];
    var isDeleteService = permissions["canDelete"];

    var controllerName = HelperExtensions.GetRequiredString(Html.ViewContext.RouteData, "controller");
    var c_list = (dynamic)ViewData["categories"] == null ? new List<dynamic>() : (dynamic)ViewData["categories"];
    var daysOfWeek = (dynamic)ViewData["daysOfWeek"] == null ? new List<dynamic>() : (dynamic)ViewData["daysOfWeek"];
    string daysOfWeekString = Newtonsoft.Json.JsonConvert.SerializeObject(daysOfWeek);

}
@section PageStyles{
<link href="~/assets/plugins/custom/datatables/datatables.bundle.css" rel="stylesheet" type="text/css" />
}

<div class="app-main flex-column flex-row-fluid user_list " id="kt_app_main">


    <!--begin::Content wrapper-->
    <div class="d-flex flex-column flex-column-fluid">
        <!--begin::Toolbar-->
        <div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
            <!--begin::Toolbar container-->
            <div id="kt_app_toolbar_container" class="app-container d-flex flex-stack">
                <!--begin::Page title-->
                <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
                    <!--begin::Title-->
                    <h1 class="page-heading d-flex text-dark fw-bold fs-3 flex-column justify-content-center my-0">@Localizer["ServiceList"]</h1>
                    <!--end::Title-->
                </div>
                <!--end::Page title-->

            </div>
            <!--end::Toolbar container-->
        </div>
        <!--end::Toolbar-->
        <!--begin::Content-->
        <div id="kt_app_content" class="app-content flex-column-fluid">
            <!--begin::Content container-->
            <div id="kt_app_content_container" class="app-container">
                <!--begin::Card-->
                <div class="card">
                    <!--begin::Card header-->
                    <div class="card-header border-0 pt-6">
                        <label class="input_label mb-2 m-1">@Localizer["Category"]</label>
                        <select class="form-select form-select-md" data-control="select2" name="idcategoryM" id="idcategoryM">
                            <option value="">@Localizer["Category"]</option>
                            @foreach (var item in c_list)
                            {
                                <option value="@Html.Raw(item.idcategory)">@Html.Raw(item.title)</option>
                            }
                        </select>
                        <!--begin::Card title-->
                        <div class="card-title">
                        </div>
                        <!--begin::Card title-->
                        <!--begin::Card toolbar-->
                        <div class="card-toolbar">
                            <!--begin::Toolbar-->
                            <div class="d-flex justify-content-end" data-kt-customer-table-toolbar="base">
                                <!--end::Filter-->
                                @if (@isAddService)
                                {
                                    <button type="button" class="btn btn-primary" onclick="window.location.href='@Url.Content("~/" + @controllerName + "/Create")'">
                                        <i class="ki-outline ki-plus fs-2"></i> @Localizer["Add"]
                                    </button>
                                }
                            </div>
                            <!--end::Toolbar-->

                        </div>
                        <!--end::Card toolbar-->

                    </div>
                    <!--end::Card header-->
                    <!--begin::Card body-->
                    <div class="card-body py-4">
                        <div class="row" id="mainData_Stable">
                            <!--begin::Table-->
                            <table class="table align-middle table-row-dashed fs-6 gy-5 cell-border" id="kt_table"> </table>

                            <div class="overlay-layer card-rounded bg-light bg-opacity-80" id="LoaderSpinner_Stable" hidden>
                                <div class="spinner-border text-primary" role="status">
                                    <span class="visually-hidden">@Localizer["Loading..."]</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--end::Card body-->
                </div>
                <!--end::Card-->
            </div>
            <!--end::Content container-->
        </div>
        <!--end::Content-->
    </div>
    <!--end::Content wrapper-->
</div>

<!--begin::Modal - Add task-->
<div class="modal fade" id="kt_modal_VAT" tabindex="-1" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-dialog-centered mw-950px">
        <!--begin::Modal content-->
        <div class="modal-content">
            <!--begin::Modal header-->
            <div class="modal-header" id="kt_modal_VAT_header">
                <!--begin::Modal title-->
                <h2 class="fw-bold" id="mainTitle">@Localizer["Appointmentsperworkingday"]</h2>
                <!--end::Modal title-->
                <!--begin::Close-->
                <div class="btn btn-icon btn-sm btn-active-icon-primary" data-kt-holiday-modal-action="close">
                    <i class="ki-duotone ki-cross fs-1">
                        <span class="path1"></span>
                        <span class="path2"></span>
                    </i>
                </div>
                <!--end::Close-->
            </div>
            <!--end::Modal header-->
            <!--begin::Modal body-->
            @*scroll-y mx-5 mx-xl-15 my-7*@
            <div class="modal-body ">
                <div class="card overlay overlay-block" id="mainData_Stable">
                    <div class="card-body py-4" style="padding-top:0px !important">
                        <table class="table align-middle table-row-dashed fs-6 gy-5 cell-border" id="kt_products_table"> </table>
                        <div class="overlay-layer card-rounded bg-light bg-opacity-80" id="LoaderSpinner_Stable">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">@Localizer["Loading..."]</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--end::Modal body-->
        </div>
        <!--end::Modal content-->
    </div>
    <!--end::Modal dialog-->
</div>
<!--end::Modal - Add task-->
@Html.AntiForgeryToken()
@Html.Hidden("Delete", "Service/Delete")
@Html.Hidden("SectionName", "Service")
@Html.Hidden("routUrl", Url.Content("~/"))

@section Scripts {
<environment>
    <script>
        var isEditService = @isEditService.ToString().ToLower();
        var isDeleteService = @isDeleteService.ToString().ToLower();
        var daysOfWeek = @Html.Raw(daysOfWeekString);
    </script>
    <script src="~/assets/plugins/custom/datatables/datatables.bundle.js" type="text/javascript"></script>
    <script src="~/js/Service/main.js" type="text/javascript" asp-append-version="true"></script>
    <script src="~/js/innerDataTable.js" type="text/javascript" asp-append-version="true"></script>
</environment>
}

