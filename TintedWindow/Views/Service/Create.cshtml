@using Newtonsoft.Json.Linq
@{
    var controllerName = HelperExtensions.GetRequiredString(Html.ViewContext.RouteData, "controller");

    var cat_list = (dynamic)ViewData["categories"] == null ? new List<dynamic>() : (dynamic)ViewData["categories"];
    var l_list = (dynamic)ViewData["locations"] == null ? new List<dynamic>() : (dynamic)ViewData["locations"];
    var c_list = (dynamic)ViewData["counters"] == null ? new List<dynamic>() : (dynamic)ViewData["counters"];

    var servicerequirements = new List<dynamic>();
    if (ViewData["fixedServiceRequirmenet"] != null)
    {
        if (ViewData["fixedServiceRequirmenet"] is JArray jArray)
        {
            servicerequirements = jArray.ToObject<List<dynamic>>();
        }
        else if (ViewData["fixedServiceRequirmenet"] is List<dynamic> existingList)
        {
            servicerequirements = existingList;
        }
        else
        {
            throw new InvalidOperationException("Unexpected type for fixedServiceRequirmenet");
        }
    }

    var userAction = ViewData["UserAction"]?.ToString();
    var title = ViewData["Title"]?.ToString();

    var actionTitle = userAction == "edit"
        ? string.Format("{0} {1}", Localizer["Edit"].Value, title ?? string.Empty)
        : Localizer["AddNew"].Value;

    var Info = (dynamic)ViewData["Info"];
    string id = userAction == "edit" ? (string)ViewData["id"] : "";

    var daysOfWeek = (dynamic)ViewData["daysOfWeek"] == null ? new List<dynamic>() : (dynamic)ViewData["daysOfWeek"];
    var labelTypes = (dynamic)ViewData["labelTypes"] == null ? new List<dynamic>() : (dynamic)ViewData["labelTypes"];

    var titleService = "";
    var idcategory = "";
    var idservice = "";
    var idlocation = "";
    var workingdays = new List<int>();
    var appointmentsperworkingday = new List<dynamic>();
    var counters = new List<dynamic>();
    var maxappointments = "";
    var neededdocs = "";

    if (userAction == "edit" && Info != null)
    {
        titleService = Info.title;
        idservice = Info.idservice;
        idcategory = Info.idcategory;
        idlocation = Info.idlocation;
        servicerequirements = Info.servicerequirements != null ? new List<dynamic>(Info.servicerequirements) : new List<dynamic>();
        appointmentsperworkingday = Info.appointmentsperworkingday != null ? new List<dynamic>(Info.appointmentsperworkingday) : new List<dynamic>();
        counters = Info.counters != null ? new List<dynamic>(Info.counters) : new List<dynamic>();
        neededdocs = Info.neededdocs;
    }
}

@section PageStyles{
<style>
    div#htmlcontent {
        border: 1px solid var(--bs-gray-300);
        height: auto !important;
    }

    .ql-toolbar.ql-snow {
