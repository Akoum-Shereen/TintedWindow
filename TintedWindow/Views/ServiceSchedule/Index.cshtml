<div class="modal fade" id="kt_modal_ServiceSchedule" tabindex="-1" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
    <!--begin::Modal dialog-->
    <div class="modal-dialog modal-dialog-centered mw-650px">
        <!--begin::Modal content-->
        <div class="modal-content">
            <!--begin::Modal header-->
            <div class="modal-header" id="kt_modal_ServiceSchedule_header">
                <!--begin::Modal title-->
                <h2 class="fw-bold" id="mainTitle">@Localizer["AddServiceSchedule"]</h2>
                <!--end::Modal title-->
                <!--begin::Close-->
                <div class="btn btn-icon btn-sm btn-active-icon-primary" data-kt-ServiceSchedule-modal-action="close">
                    <i class="ki-duotone ki-cross fs-1">
                        <span class="path1"></span>
                        <span class="path2"></span>
                    </i>
                </div>
                <!--end::Close-->
            </div>
            <!--end::Modal header-->
            <!--begin::Modal body-->
            <div class="modal-body scroll-y mx-5 mx-xl-15 my-7">
                <!--begin::Form-->
                <form id="kt_modal_ServiceSchedule_form" class="form">
                    @Html.Hidden("idServiceSchedule", "")
                    <!--begin::Scroll-->
                    <div class="d-flex flex-column scroll-y me-n7 pe-7" id="kt_modal_ServiceSchedule_scroll" data-kt-scroll="true" data-kt-scroll-activate="{default: false, lg: true}"
                         data-kt-scroll-max-height="auto" data-kt-scroll-dependencies="#kt_modal_ServiceSchedule_header" data-kt-scroll-wrappers="#kt_modal_ServiceSchedule_scroll" data-kt-scroll-offset="300px">
                        <!--begin::Input group-->
                        <div class="fv-row mb-7">
                            <label class="input_label mb-2 m-1">@Localizer["Service"]</label>
                            <select class="form-select form-select-md" data-control="select2" name="idservice" id="idservice">
                                <option value="">@Localizer["Service"]</option>
                                @foreach (var item in new List<dynamic>(s_listAll))
                                {
                                    <option value="@Html.Raw(item.idservice)">@Html.Raw(item.title)</option>
                                }
                            </select>
                        </div>
                        <div class="fv-row mb-7">
                            <!--begin::Label-->
                            <label class="required fs-6 mb-2">@Localizer["Startdate"]</label>
                            <!--end::Label-->
                            <!--begin::Input-->
                            <input type="text" name="startdate" id="startdate" class="form-control" placeholder="@Localizer["Startdate"]" inert />

                            <!--end::Input-->
                        </div>
                        <!--end::Input group-->
                        <!--begin::Input group-->
                        <div class="fv-row mb-7">
                            <!--begin::Label-->
                            <label class="required fs-6 mb-2">@Localizer["Enddate"]</label>
                            <!--end::Label-->
                            <!--begin::Input-->
                            <input type="text" name="enddate" id="enddate" class="form-control" placeholder="@Localizer["Enddate"]" inert />

                            <!--end::Input-->
                        </div>
                        <!--end::Input group-->
                        <div class="col-12 mb-5 fv-row">
                            <label class="required input-label mb-2">@Localizer["Openingdayscount"]</label>
                            <input id="openingdayscount" name="openingdayscount" min=1 max=999 style="direction:rtl" class="form-control" type="number" placeholder="@Localizer["Openingdayscount"]">
                        </div>
                        <div class="col-12 mb-5 fv-row">
                            <label class="required input-label mb-2">@Localizer["Schedulingdaybeforeendofappointments"]</label>
                            <input id="schedulingdaybeforeendofappointments" name="schedulingdaybeforeendofappointments" min=1 max=999 style="direction:rtl" class="form-control" type="number" placeholder="@Localizer["Schedulingdaybeforeendofappointments"]">
                        </div>
                    </div>
                    <!--end::Scroll-->
                    <!--begin::Actions-->
                    <div class="text-center pt-15">
                        <button type="reset" class="btn btn-light me-3" data-kt-ServiceSchedule-modal-action="cancel">@Localizer["Discard"]</button>
                        <button type="submit" class="btn btn-primary" data-kt-ServiceSchedule-modal-action="submit">
                            <span class="indicator-label">@Localizer["Submit"]</span>
                            <span class="indicator-progress">
                                @Localizer["PleaseWait..."]
                                <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                            </span>
                        </button>
                    </div>
                    <!--end::Actions-->
                </form>
                <!--end::Form-->
            </div>
            <!--end::Modal body-->
        </div>
        <!--end::Modal content-->
    </div>
    <!--end::Modal dialog-->
</div>
