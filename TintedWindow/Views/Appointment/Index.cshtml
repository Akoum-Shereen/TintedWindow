@{

    var permissions = ViewData["permissions"] as Dictionary<string, bool>;

    var isAddAppointment = permissions["canAdd"];
    var isEditAppointment = permissions["canUpdate"];
    var isDeleteAppointment = permissions["canDelete"];

    var controllerName = HelperExtensions.GetRequiredString(Html.ViewContext.RouteData, "controller");

    var s_list = (dynamic)ViewData["services"] == null ? new List<dynamic>() : (dynamic)ViewData["services"];
    var m_list = (dynamic)ViewData["Months"] == null ? new List<dynamic>() : (dynamic)ViewData["Months"];
    var y_list = (dynamic)ViewData["Years"] == null ? new List<dynamic>() : (dynamic)ViewData["Years"];
    int currentYear = DateTime.Now.Year;
    int currentMonth = DateTime.Now.Month;

}
@section PageStyles{
<link href="~/assets/plugins/custom/datatables/datatables.bundle.css" rel="stylesheet" type="text/css" />
}

<div class="app-main flex-column flex-row-fluid user_list " id="kt_app_main">


    <!--begin::Content wrapper-->
    <div class="d-flex flex-column flex-column-fluid">
        <!--begin::Toolbar-->
        <div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
            <!--begin::Toolbar container-->
            <div id="kt_app_toolbar_container" class="app-container d-flex flex-stack">
                <!--begin::Page title-->
                <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
                    <!--begin::Title-->
                    <h1 class="page-heading d-flex text-dark fw-bold fs-3 flex-column justify-content-center my-0">@Localizer["AppointmentList"]</h1>
                    <!--end::Title-->
                </div>
                <!--end::Page title-->

            </div>
            <!--end::Toolbar container-->
        </div>
        <!--end::Toolbar-->
        <!--begin::Content-->
        <div id="kt_app_content" class="app-content flex-column-fluid">
            <!--begin::Content container-->
            <div id="kt_app_content_container" class="app-container">
                <!--begin::Card-->
                <div class="card overlay overlay-block" id="mainData">
                    <!--begin::Card header-->
                    <div class="card-header border-0 pt-6">
                        @*   <div class="col-sm-12 col-md-4 fv-row mb-7">
                            <label class="input_label mb-2 m-1">@Localizer["Service"]</label>
                            <select class="form-select form-select-md" data-control="select2" name="idservice" id="idservice" multiple data-allow-clear=true data-placeholder="@Localizer["Service"]">
                            @foreach (var item in s_list)
                            {
                            <option value="@Html.Raw(item.idservice)">@Html.Raw(item.title)</option>
                            }
                            </select>
                            </div>*@

                        <div class="col-sm-12 col-md-4 fv-row mb-7">
                            <label class="input_label mb-2 m-1">@Localizer["Month"]</label>
                            <select class="form-select form-select-md" data-control="select2" name="month" id="month">
                                <option value="">@Localizer["Month"]</option>
                                @foreach (var item in m_list)
                                {
                                    if (item.Key == currentMonth)
                                    {
                                        <option value="@Html.Raw(item.Key)" selected>@Html.Raw(item.Value)</option>
                                    }
                                    else
                                    {
                                        <option value="@Html.Raw(item.Key)">@Html.Raw(item.Value)</option>
                                    }
                                }
                            </select>
                        </div>

                        <div class="col-sm-12 col-md-4 fv-row mb-7">
                            <label class="input_label mb-2 m-1">@Localizer["Year"]</label>
                            <select class="form-select form-select-md" data-control="select2" name="year" id="year">
                                <option value="">@Localizer["Year"]</option>
                                @foreach (var item in y_list)
                                {
                                    if (item == currentYear)
                                    {
                                        <option value="@Html.Raw(item)" selected>@Html.Raw(item)</option>
                                    }
                                    else
                                    {
                                        <option value="@Html.Raw(item)">@Html.Raw(item)</option>
                                    }
                                }
                            </select>
                        </div>

                        <div class="col-sm-12 col-md-3 fv-row mb-7 d-flex" style="justify-content: end; align-items: end;">
                            <button type="button" class="btn btn-primary" onclick="searchAppointment()">
                                @Localizer["Search"]
                            </button>
                        </div>
                        <!--begin::Card title-->
                        <div class="card-title">
                        </div>
                        <!--begin::Card title-->
                        <!--begin::Card toolbar-->
                        <div class="card-toolbar">
                            <!--begin::Toolbar-->
                            <div class="d-flex justify-content-end" data-kt-customer-table-toolbar="base">
                            </div>
                            <!--end::Toolbar-->

                        </div>
                        <!--end::Card toolbar-->

                    </div>
                    <!--end::Card header-->
                    <!--begin::Card body-->
                    <div class="card-body py-4">
                        <!--begin::Table-->
                        <table class="table align-middle table-row-dashed fs-6 gy-5" id="kt_table"> </table>
                        <!--end::Table-->
                        <div class="overlay-layer card-rounded bg-light bg-opacity-80" id="LoaderSpinner">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">@Localizer["Loading..."]</span>
                            </div>
                        </div>
                    </div>
                    <!--end::Card body-->
                </div>
                <!--end::Card-->
            </div>
            <!--end::Content container-->
        </div>
        <!--end::Content-->
    </div>
    <!--end::Content wrapper-->
</div>

<!--begin::Modal - Add task-->
<div class="modal fade" id="kt_modal_Appointment" tabindex="-1" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
    <!--begin::Modal dialog-->
    <div class="modal-dialog modal-dialog-centered mw-650px">
        <!--begin::Modal content-->
        <div class="modal-content">
            <!--begin::Modal header-->
            <div class="modal-header" id="kt_modal_Appointment_header">
                <!--begin::Modal title-->
                <h2 class="fw-bold" id="mainTitle">@Localizer["AddAppointment"]</h2>
                <!--end::Modal title-->
                <!--begin::Close-->
                <div class="btn btn-icon btn-sm btn-active-icon-primary" data-kt-Appointment-modal-action="close">
                    <i class="ki-duotone ki-cross fs-1">
                        <span class="path1"></span>
                        <span class="path2"></span>
                    </i>
                </div>
                <!--end::Close-->
            </div>
            <!--end::Modal header-->
            <!--begin::Modal body-->
            <div class="modal-body scroll-y mx-5 mx-xl-15 my-7">
                <!--begin::Form-->
                <form id="kt_modal_Appointment_form" class="form">
                    @Html.Hidden("idAppointment", "")
                    <!--begin::Scroll-->
                    <div class="d-flex flex-column scroll-y me-n7 pe-7" id="kt_modal_Appointment_scroll" data-kt-scroll="true" data-kt-scroll-activate="{default: false, lg: true}"
                         data-kt-scroll-max-height="auto" data-kt-scroll-dependencies="#kt_modal_Appointment_header" data-kt-scroll-wrappers="#kt_modal_Appointment_scroll" data-kt-scroll-offset="300px">
                        <!--begin::Input group-->
                        <div class="fv-row mb-7">
                            <!--begin::Label-->
                            <label class="required fw-semibold fs-6 mb-2">@Localizer["Title"]</label>
                            <!--end::Label-->
                            <!--begin::Input-->
                            <input type="text" name="title" id="title" class="form-control" placeholder="@Localizer["EnterTitle"]" />
                            <!--end::Input-->
                        </div>
                        <!--end::Input group-->
                    </div>
                    <!--end::Scroll-->
                    <!--begin::Actions-->
                    <div class="text-center pt-15">
                        <button type="reset" class="btn btn-light me-3" data-kt-Appointment-modal-action="cancel">@Localizer["Discard"]</button>
                        <button type="submit" class="btn btn-primary" data-kt-Appointment-modal-action="submit">
                            <span class="indicator-label">@Localizer["Submit"]</span>
                            <span class="indicator-progress">
                                @Localizer["PleaseWait..."]
                                <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                            </span>
                        </button>
                    </div>
                    <!--end::Actions-->
                </form>
                <!--end::Form-->
            </div>
            <!--end::Modal body-->
        </div>
        <!--end::Modal content-->
    </div>
    <!--end::Modal dialog-->
</div>
<!--end::Modal - Add task-->
@Html.AntiForgeryToken()
@Html.Hidden("gridList", "Appointment/List")
@Html.Hidden("Delete", "Appointment/Delete")
@Html.Hidden("SectionName", "Appointment")
@Html.Hidden("routUrl", Url.Content("~/"))

@section Scripts {
<environment>
    <script>
        var isEditAppointment = @isEditAppointment.ToString().ToLower();
        var isDeleteAppointment = @isDeleteAppointment.ToString().ToLower();
        var currentYear = @currentYear;
        var currentMonth = @currentMonth;
    </script>
    <script src="~/assets/plugins/custom/datatables/datatables.bundle.js" type="text/javascript"></script>
    <script src="~/js/Appointment/main.js" type="text/javascript" asp-append-version="true"></script>
    <script src="~/js/dataTable.js" type="text/javascript" asp-append-version="true"></script>
</environment>
}

