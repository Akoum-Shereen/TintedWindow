@{
    var permissions = ViewData["permissions"] as Dictionary<string, bool>;

    var isAddCorporate = permissions["canAdd"];
    var isEditCorporate = permissions["canUpdate"];
    var isDeleteCorporate = permissions["canDelete"];

    var controllerName = HelperExtensions.GetRequiredString(Html.ViewContext.RouteData, "controller");

    var c_list = (dynamic)ViewData["corporateGroups"] == null ? new List<dynamic>() : (dynamic)ViewData["corporateGroups"];

    var PASSWORD_INPUT_MIN_LENGTH = Configuration.GetValue<string>("Validation:PASSWORD_INPUT_MIN_LENGTH");
    var PASSWORD_INPUT_MAX_LENGTH = Configuration.GetValue<string>("Validation:PASSWORD_INPUT_MAX_LENGTH");
}
@section PageStyles{
<link href="~/assets/plugins/custom/datatables/datatables.bundle.css" rel="stylesheet" type="text/css" />
}

<div class="app-main flex-column flex-row-fluid user_list " id="kt_app_main">


    <!--begin::Content wrapper-->
    <div class="d-flex flex-column flex-column-fluid">
        <!--begin::Toolbar-->
        <div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
            <!--begin::Toolbar container-->
            <div id="kt_app_toolbar_container" class="app-container d-flex flex-stack">
                <!--begin::Page title-->
                <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
                    <!--begin::Title-->
                    <h1 class="page-heading d-flex text-dark fw-bold fs-3 flex-column justify-content-center my-0">@Localizer["CorporateList"]</h1>
                    <!--end::Title-->
                </div>
                <!--end::Page title-->

            </div>
            <!--end::Toolbar container-->
        </div>
        <!--end::Toolbar-->
        <!--begin::Content-->
        <div id="kt_app_content" class="app-content flex-column-fluid">
            <!--begin::Content container-->
            <div id="kt_app_content_container" class="app-container">
                <!--begin::Card-->
                <div class="card overlay overlay-block" id="mainData">
                    <!--begin::Card header-->
                    <div class="card-header border-0 pt-6">
                        <!--begin::Card title-->
                        <div class="card-title">
                        </div>
                        <!--begin::Card title-->
                        <!--begin::Card toolbar-->
                        <div class="card-toolbar">
                            <!--begin::Toolbar-->
                            <div class="d-flex justify-content-end" data-kt-customer-table-toolbar="base">
                                <!--end::Filter-->
                                @if (@isAddCorporate)
                                {
                                    <button type="button" class="btn btn-primary" onclick="edit('0')">
                                        <i class="ki-outline ki-plus fs-2"></i> @Localizer["Add"]
                                    </button>
                                }
                            </div>
                            <!--end::Toolbar-->

                        </div>
                        <!--end::Card toolbar-->

                    </div>
                    <!--end::Card header-->
                    <!--begin::Card body-->
                    <div class="card-body py-4">
                        <!--begin::Table-->
                        <table class="table align-middle table-row-dashed fs-6 gy-5" id="kt_table"> </table>
                        <!--end::Table-->
                        <div class="overlay-layer card-rounded bg-light bg-opacity-80" id="LoaderSpinner">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">@Localizer["Loading..."]</span>
                            </div>
                        </div>
                    </div>
                    <!--end::Card body-->
                </div>
                <!--end::Card-->
            </div>
            <!--end::Content container-->
        </div>
        <!--end::Content-->
    </div>
    <!--end::Content wrapper-->
</div>

<!--begin::Modal - Add task-->
<div class="modal fade" id="kt_modal_Corporate" tabindex="-1" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
    <!--begin::Modal dialog-->
    <div class="modal-dialog modal-dialog-centered mw-650px">
        <!--begin::Modal content-->
        <div class="modal-content">
            <!--begin::Modal header-->
            <div class="modal-header" id="kt_modal_Corporate_header">
                <!--begin::Modal title-->
                <h2 class="fw-bold" id="mainTitle">@Localizer["AddCorporate"]</h2>
                <!--end::Modal title-->
                <!--begin::Close-->
                <div class="btn btn-icon btn-sm btn-active-icon-primary" data-kt-Corporate-modal-action="close">
                    <i class="ki-duotone ki-cross fs-1">
                        <span class="path1"></span>
                        <span class="path2"></span>
                    </i>
                </div>
                <!--end::Close-->
            </div>
            <!--end::Modal header-->
            <!--begin::Modal body-->
            <div class="modal-body scroll-y mx-5 mx-xl-15 my-7">
                <!--begin::Form-->
                <form id="kt_modal_Corporate_form" class="form">
                    @Html.Hidden("idCorporate", "")
                    <!--begin::Scroll-->
                    <div class="d-flex flex-column scroll-y me-n7 pe-7" id="kt_modal_Corporate_scroll" data-kt-scroll="true" data-kt-scroll-activate="{default: false, lg: true}"
                         data-kt-scroll-max-height="auto" data-kt-scroll-dependencies="#kt_modal_Corporate_header" data-kt-scroll-wrappers="#kt_modal_Corporate_scroll" data-kt-scroll-offset="300px">
                        <div class="fv-row mb-7">
                            <label class="required fw-semibold fs-6 mb-2">@Localizer["CorporateGroup"]</label>
                            <select class="form-select form-select-md" data-control="select2" name="idcorporategroup" id="idcorporategroup">
                                <option value="">@Localizer["CorporateGroup"]</option>
                                @foreach (var item in new List<dynamic>(c_list))
                                {
                                    <option value="@Html.Raw(item.idcorporategroup)">@Html.Raw(item.groupname)</option>
                                }
                            </select>
                        </div>

                        <!--begin::Input group-->
                        <div class="fv-row mb-7">
                            <label class="required fw-semibold fs-6 mb-2">@Localizer["Name"]</label>
                            <input type="text" name="name" id="name" maxlength=100 class="form-control" placeholder="@Localizer["EnterName"]" />
                        </div>
                        <!--end::Input group-->
                        <!--begin::Input group-->
                        <div class="fv-row mb-7">
                            <label class="required fw-semibold fs-6 mb-2">@Localizer["Username"]</label>
                            <input type="text" name="username" id="username" maxlength=100  class="form-control" placeholder="@Localizer["EnterUsername"]" />
                        </div>
                        <!--end::Input group-->
                        <!--begin::Input group-->
                        <div class="fv-row mb-7" id="passwordContainer" data-kt-password-meter="true">
                            <label class="required fw-semibold fs-6 mb-2" id="passwordLabel">@Localizer["Password"]</label>
                            <div class="position-relative mb-3">
                                <input id="password" name="password" maxlength=20  class="form-control" type="password" placeholder="@Localizer["EnterPassword"]" autocomplete="new-password">
                                <span class="btn btn-sm btn-icon position-absolute translate-middle top-50 end-0 me-n2" data-kt-password-meter-control="visibility">
                                    <i class="ki-duotone ki-eye-slash fs-1"><span class="path1"></span><span class="path2"></span><span class="path3"></span><span class="path4"></span></i>
                                    <i class="ki-duotone ki-eye d-none fs-1"><span class="path1"></span><span class="path2"></span><span class="path3"></span></i>
                                </span>
                            </div>
                        </div>
                        <!--end::Input group-->
                        <!--begin::Input group-->
                        <div class="fv-row mb-7">
                            <label class="required fw-semibold fs-6 mb-2">@Localizer["Phonenumber"]</label>
                            <input type="text" name="phonenumber" maxlength=20  minlength=6 id="phonenumber" class="form-control NumbersOnly" placeholder="@Localizer["EnterPhoneNumber"]" />
                        </div>
                        <!--end::Input group-->

                    </div>
                    <!--end::Scroll-->
                    <!--begin::Actions-->
                    <div class="text-center pt-15">
                        <button type="reset" class="btn btn-light me-3" data-kt-Corporate-modal-action="cancel">@Localizer["Discard"]</button>
                        <button type="submit" class="btn btn-primary" data-kt-Corporate-modal-action="submit">
                            <span class="indicator-label">@Localizer["Submit"]</span>
                            <span class="indicator-progress">
                                @Localizer["PleaseWait..."]
                                <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                            </span>
                        </button>
                    </div>
                    <!--end::Actions-->
                </form>
                <!--end::Form-->
            </div>
            <!--end::Modal body-->
        </div>
        <!--end::Modal content-->
    </div>
    <!--end::Modal dialog-->
</div>
<!--end::Modal - Add task-->
@Html.AntiForgeryToken()
@Html.Hidden("gridList", "Corporate/List")
@Html.Hidden("Delete", "Corporate/Delete")
@Html.Hidden("SectionName", "Corporate")
@Html.Hidden("routUrl", Url.Content("~/"))

@section Scripts {
<environment>
    <script>
            var isEditCorporate = @isEditCorporate.ToString().ToLower();
            var isDeleteCorporate = @isDeleteCorporate.ToString().ToLower();
                var PASSWORD_INPUT_MIN_LENGTH = @PASSWORD_INPUT_MIN_LENGTH;
        var PASSWORD_INPUT_MAX_LENGTH = @PASSWORD_INPUT_MAX_LENGTH;
    </script>
    <script src="~/assets/plugins/custom/datatables/datatables.bundle.js" type="text/javascript"></script>
    <script src="~/js/Corporate/main.js" type="text/javascript" asp-append-version="true"></script>
    <script src="~/js/dataTable.js" type="text/javascript" asp-append-version="true"></script>
</environment>
}

