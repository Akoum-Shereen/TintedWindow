@{
    ViewData["Title"] = Localizer["application"] ;

}
<a href="@(Url.Content("~/Application"))" class="back-btn" style="display:none;"></a>

<div class="d-flex flex-column flex-column-fluid">
    <div id="kt_app_toolbar" class="app-toolbar  py-3 py-lg-6 ">
        <!--begin::Toolbar-->
        <!--begin::Toolbar container-->
        <div id="kt_app_toolbar_container" class="app-container d-flex flex-stack ">
            <!--begin::Page title-->
            <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3 ">
                <!--begin::Title-->
                <h1 class="page-heading d-flex text-dark fw-bold fs-3 flex-column justify-content-center my-0">
                    @ViewData["Title"]
                </h1>
                <!--end::Title-->
            </div>
            <!--end::Page title-->
        </div>
        <!--end::Toolbar container-->
    </div>
    <!--end::Toolbar-->
    <!--begin::Content container-->
    <div id="kt_app_content" class="app-content  flex-column-fluid ">
        <div id="kt_app_content_container" class="app-container">
            <!--begin::Contacts App- Add New Contact-->
            <div class="row g-7">
                <!--begin::Content-->
                <!--begin::Contacts-->
                <div class="card card-flush h-lg-100" id="kt_users_main">
                    <!--begin::Card body-->
                    <div class="card-body">
                        <!--begin::Form-->
                        <form id="kt_user_form" class="form" autocomplete="off">
                            <div class="row">
                                <div class="col-md-6 mb-5 fv-row">
                                    <label class="required input-label mb-2">@Localizer["plateNumber"]</label>
                                    <input id="plateNumber" name="plateNumber" class="form-control" type="text" placeholder="@Localizer["plateNumber"]">
                                </div>

                                <div class="col-md-6 mb-5 fv-row">
                                    <label class="required input-label mb-2">@Localizer["Full Name"]</label>
                                    <input id="fullName" name="fullName" class="form-control" type="text" placeholder="@Localizer["Full Name"]">
                                </div>

                                <div class="col-md-6 mb-5 fv-row">
                                    <label class="required input_label mb-2">@Localizer["User Name"]</label>
                                    <input id="UserName" name="UserName" class="form-control" type="text" placeholder="@Localizer["User Name"]" autocomplete="off">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-5 fv-row">
                                    <label class="required input_label mb-2">@Localizer["Email"]</label>
                                    <input id="email" name="email" class="form-control" type="text" placeholder="@Localizer["Email"]">
                                </div>

                                <div class="col-md-6 mb-5 fv-row">
                                    <label class="required input_label mb-2">@Localizer["Phone"]</label>
                                    <input id="user_phone" name="user_phone" class="form-control NumbersOnly" type="text" placeholder="@Localizer["Phone"]">
                                </div>
                            </div>

                            <div class="separator mb-6"></div>
                            <!--end::Separator-->
                            <!--begin::Action buttons-->
                            <div class="d-flex justify-content-end">
                                <!--begin::Button-->
                                <button type="reset"
                                        onclick="window.location.href='@Url.Content("~/WebUsers")'"
                                        id="kt_modal_cancel" class="btn btn-light me-3">
                                    @Localizer["Cancel"]
                                </button>
                                <!--end::Button-->
                                <!--begin::Button-->
                                <button type="submit" id="kt_user_modal_submit" class="btn btn-primary">
                                    <span class="indicator-label">
                                        @Localizer["Submit"]
                                    </span>
                                    <span class="indicator-progress">
                                        @Localizer["PleaseWait..."]
                                        <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                                    </span>
                                </button>
                                <!--end::Button-->
                            </div>
                            <!--end::Action buttons-->
                        </form>
                        <!--end::Form-->
                    </div>
                    <!--end::Card body-->
                </div>
                <!--end::Contacts-->
            </div>
            <!--end::Content-->
            <!--end::Contacts App- Add New Contact-->
        </div>
        <!--end::Content container-->
    </div>
</div>

@Html.AntiForgeryToken()

@section Scripts {
    <script src="~/js/Application/create.js" type="text/javascript" asp-append-version="true"></script>
}