@{

    var permissions = ViewData["permissions"] as Dictionary<string, bool>;

    var isAddAnnouncement = permissions["canAdd"];
    var isEditAnnouncement = permissions["canUpdate"];
    var isDeleteAnnouncement = permissions["canDelete"];

    var controllerName = HelperExtensions.GetRequiredString(Html.ViewContext.RouteData, "controller");
}
@section PageStyles{
<link href="~/assets/plugins/custom/datatables/datatables.bundle.css" rel="stylesheet" type="text/css" />
}

<div class="app-main flex-column flex-row-fluid user_list " id="kt_app_main">


    <!--begin::Content wrapper-->
    <div class="d-flex flex-column flex-column-fluid">
        <!--begin::Toolbar-->
        <div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
            <!--begin::Toolbar container-->
            <div id="kt_app_toolbar_container" class="app-container d-flex flex-stack">
                <!--begin::Page title-->
                <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
                    <!--begin::Title-->
                    <h1 class="page-heading d-flex text-dark fw-bold fs-3 flex-column justify-content-center my-0">@Localizer["AnnouncementList"]</h1>
                    <!--end::Title-->
                </div>
                <!--end::Page title-->

            </div>
            <!--end::Toolbar container-->
        </div>
        <!--end::Toolbar-->
        <!--begin::Content-->
        <div id="kt_app_content" class="app-content flex-column-fluid">
            <!--begin::Content container-->
            <div id="kt_app_content_container" class="app-container">
                <!--begin::Card-->
                <div class="card overlay overlay-block" id="mainData">
                    <!--begin::Card header-->
                    <div class="card-header border-0 pt-6">
                        <!--begin::Card title-->
                        <div class="card-title">
                        </div>
                        <!--begin::Card title-->
                        <!--begin::Card toolbar-->
                        <div class="card-toolbar">
                            <!--begin::Toolbar-->
                            <div class="d-flex justify-content-end" data-kt-customer-table-toolbar="base">
                                <!--end::Filter-->
                                @if (@isAddAnnouncement)
                                {
                                    <button type="button" class="btn btn-primary" onclick="window.location.href='@Url.Content("~/" + @controllerName + "/Create")'">
                                        <i class="ki-outline ki-plus fs-2"></i> @Localizer["Add"]
                                    </button>
                                }
                            </div>
                            <!--end::Toolbar-->

                        </div>
                        <!--end::Card toolbar-->

                    </div>
                    <!--end::Card header-->
                    <!--begin::Card body-->
                    <div class="card-body py-4">
                        <!--begin::Table-->
                        <table class="table align-middle table-row-dashed fs-6 gy-5" id="kt_table"> </table>
                        <!--end::Table-->
                        <div class="overlay-layer card-rounded bg-light bg-opacity-80" id="LoaderSpinner">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">@Localizer["Loading..."]</span>
                            </div>
                        </div>
                    </div>
                    <!--end::Card body-->
                </div>
                <!--end::Card-->
            </div>
            <!--end::Content container-->
        </div>
        <!--end::Content-->
    </div>
    <!--end::Content wrapper-->
</div>

@Html.AntiForgeryToken()
@Html.Hidden("gridList", "Announcement/List")
@Html.Hidden("Delete", "Announcement/Delete")
@Html.Hidden("SectionName", "Announcement")
@Html.Hidden("routUrl", Url.Content("~/"))

@section Scripts {
<environment>
    <script>
        var isEditAnnouncement = @isEditAnnouncement.ToString().ToLower();
        var isDeleteAnnouncement = @isDeleteAnnouncement.ToString().ToLower();
    </script>
    <script src="~/assets/plugins/custom/datatables/datatables.bundle.js" type="text/javascript"></script>
    <script src="~/js/Announcement/main.js" type="text/javascript" asp-append-version="true"></script>
    <script src="~/js/dataTable.js" type="text/javascript" asp-append-version="true"></script>
</environment>
}

