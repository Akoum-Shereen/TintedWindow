@{
    var permissions = ViewData["permissions"] as Dictionary<string, bool>;

    var isAddServiceLink = permissions["canAdd"];
    var isEditServiceLink = permissions["canUpdate"];
    var isDeleteServiceLink = permissions["canDelete"];

    var controllerName = HelperExtensions.GetRequiredString(Html.ViewContext.RouteData, "controller");

    var s_list = (dynamic)ViewData["services"] == null ? new List<dynamic>() : (dynamic)ViewData["services"];

}
@section PageStyles{
<link href="~/assets/plugins/custom/datatables/datatables.bundle.css" rel="stylesheet" type="text/css" />
}

<div class="app-main flex-column flex-row-fluid user_list " id="kt_app_main">


    <!--begin::Content wrapper-->
    <div class="d-flex flex-column flex-column-fluid">
        <!--begin::Toolbar-->
        <div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
            <!--begin::Toolbar container-->
            <div id="kt_app_toolbar_container" class="app-container d-flex flex-stack">
                <!--begin::Page title-->
                <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
                    <!--begin::Title-->
                    <h1 class="page-heading d-flex text-dark fw-bold fs-3 flex-column justify-content-center my-0">@Localizer["ServiceLinkList"]</h1>
                    <!--end::Title-->
                </div>
                <!--end::Page title-->

            </div>
            <!--end::Toolbar container-->
        </div>
        <!--end::Toolbar-->
        <!--begin::Content-->
        <div id="kt_app_content" class="app-content flex-column-fluid">
            <!--begin::Content container-->
            <div id="kt_app_content_container" class="app-container">
                <!--begin::Card-->
                <div class="card" id="mainData">
                    <!--begin::Card header-->
                    <div class="card-header border-0 pt-6">
                      @*  <label class="input_label mb-2 m-1">@Localizer["Service"]</label>
                        <select class="form-select form-select-md" data-control="select2" name="idserviceM" id="idserviceM">
                            <option value="">@Localizer["Service"]</option>
                            @foreach (var item in s_list)
                            {
                                <option value="@Html.Raw(item.idservice)">@Html.Raw(item.title)</option>
                            }*@
                        </select>
                        <!--begin::Card title-->
                        <div class="card-title">
                        </div>
                        <!--begin::Card title-->
                        <!--begin::Card toolbar-->
                        <div class="card-toolbar">
                            <!--begin::Toolbar-->
                            <div class="d-flex justify-content-end " data-kt-customer-table-toolbar="base">
                                <!--end::Filter-->
                                @if (@isAddServiceLink)
                                {
                                    <button type="button" class="btn btn-primary" onclick="editServiceLink('0')">
                                        <i class="ki-outline ki-plus fs-2"></i>@Localizer["Add"]
                                    </button>
                                }
                            </div>
                            <!--end::Toolbar-->

                        </div>
                        <!--end::Card toolbar-->

                    </div>
                    <!--begin::Card body-->
                    <div class="card-body py-4">
                        <div class="row" id="mainData_Stable">
                            <table class="table align-middle table-row-dashed fs-6 gy-5 cell-border" id="kt_table"> </table>

                            <div class="overlay-layer card-rounded bg-light bg-opacity-80" id="LoaderSpinner_Stable" hidden>
                                <div class="spinner-border text-primary" role="status">
                                    <span class="visually-hidden">@Localizer["Loading..."]</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--end::Card body-->
                </div>
                <!--end::Card-->
            </div>
            <!--end::Content container-->
        </div>
        <!--end::Content-->
    </div>
    <!--end::Content wrapper-->
</div>


<!--begin::Modal - Add task-->
<div class="modal fade" id="kt_modal_ServiceLink" tabindex="-1" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
    <!--begin::Modal dialog-->
    <div class="modal-dialog modal-dialog-centered mw-650px">
        <!--begin::Modal content-->
        <div class="modal-content">
            <!--begin::Modal header-->
            <div class="modal-header" id="kt_modal_ServiceLink_header">
                <!--begin::Modal title-->
                <h2 class="fw-bold" id="mainTitle">@Localizer["AddServiceLink"]</h2>
                <!--end::Modal title-->
                <!--begin::Close-->
                <div class="btn btn-icon btn-sm btn-active-icon-primary" data-kt-ServiceLink-modal-action="close">
                    <i class="ki-duotone ki-cross fs-1">
                        <span class="path1"></span>
                        <span class="path2"></span>
                    </i>
                </div>
                <!--end::Close-->
            </div>
            <!--end::Modal header-->
            <!--begin::Modal body-->
            <div class="modal-body scroll-y mx-5 mx-xl-15 my-7">
                <!--begin::Form-->
                <form id="kt_modal_ServiceLink_form" class="form">
                    @Html.Hidden("idserviceS", "")
                    @Html.Hidden("nextidserviceS", "")

                    <!--begin::Scroll-->
                    <div class="d-flex flex-column scroll-y me-n7 pe-7" id="kt_modal_ServiceLink_scroll" data-kt-scroll="true" data-kt-scroll-activate="{default: false, lg: true}"
                         data-kt-scroll-max-height="auto" data-kt-scroll-dependencies="#kt_modal_ServiceLink_header" data-kt-scroll-wrappers="#kt_modal_ServiceLink_scroll" data-kt-scroll-offset="300px">
                        <!--begin::Input group-->
                        <div class="fv-row mb-7">
                            <label class="required input_label mb-2 m-1">@Localizer["Service"]</label>
                            <select class="form-select form-select-md" data-control="select2" name="idservice" id="idservice" onchange="updateOptions()">
                                <option value="">@Localizer["Service"]</option>
                                @foreach (var item in s_list)
                                {
                                    <option value="@Html.Raw(item.idservice)">@Html.Raw(item.title)</option>
                                }
                            </select>
                        </div>
                        <!--end::Input group-->
                        <!--begin::Input group-->
                        <div class="fv-row mb-7">
                            <label class="required input_label mb-2 m-1">@Localizer["Nextservice"]</label>
                            <select class="form-select form-select-md" data-control="select2" name="nextidservice" id="nextidservice" onchange="updateOptions()">
                                <option value="">@Localizer["Nextservice"]</option>
                                @foreach (var item in s_list)
                                {
                                    <option value="@Html.Raw(item.idservice)">@Html.Raw(item.title)</option>
                                }
                            </select>
                        </div>
                        <!--end::Input group-->
                        <!--begin::Input group-->
                        <div class="fv-row mb-7">
                            <label class="required input_label mb-2 m-1">@Localizer["Appointmentwaitdays"]</label>
                            <input type="number" min=1 max=999 style="direction:rtl" name="appointmentwaitdays" id="appointmentwaitdays" class="form-control NumbersOnly" placeholder="@Localizer["Appointmentwaitdays"]" />
                        </div>
                        <!--end::Input group-->

                        <div class="fv-row mb-7">
                            <label class="required input-label mb-2">@Localizer["MaxappointmentsServiceLink"]</label>
                            <input id="maxappointments" name="maxappointments" min=1 max=999 style="direction:rtl" class="form-control NumbersOnly" type="number" placeholder="@Localizer["MaxappointmentsServiceLink"]">
                        </div>
                        <!--begin::Input group-->

                        <!--end::Input group-->

                        <div class="fv-row mb-7">
                            <label class="required input-label mb-2">@Localizer["Appointmentmaxdays"]</label>
                            <input id="appointmentmaxdays" name="appointmentmaxdays" min=1 max=999 style="direction:rtl" class="form-control NumbersOnly" type="number" placeholder="@Localizer["Appointmentmaxdays"]">
                        </div>
                        <!--begin::Input group-->
                        <div class="fv-row mb-7">
                            <label class="required input_label mb-2 m-1">@Localizer["Displaymessage"]</label>
                            <input type="text" name="displaymessage"   maxlength=500  id="displaymessage" class="form-control" placeholder="@Localizer["Displaymessage"]" />
                        </div>
                        <!--end::Input group-->
                    </div>
                    <!--end::Scroll-->
                    <!--begin::Actions-->
                    <div class="text-center pt-15">
                        <button type="reset" class="btn btn-light me-3" data-kt-ServiceLink-modal-action="cancel">@Localizer["Discard"]</button>
                        <button type="submit" class="btn btn-primary" data-kt-ServiceLink-modal-action="submit">
                            <span class="indicator-label">@Localizer["Submit"]</span>
                            <span class="indicator-progress">
                                @Localizer["PleaseWait..."]
                                <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                            </span>
                        </button>
                    </div>
                    <!--end::Actions-->
                </form>
                <!--end::Form-->
            </div>
            <!--end::Modal body-->
        </div>
        <!--end::Modal content-->
    </div>
    <!--end::Modal dialog-->
</div>
<!--end::Modal - Add task-->
@Html.AntiForgeryToken()
@Html.Hidden("Delete", "ServiceLink/Delete")
@Html.Hidden("SectionName", "ServiceLink")
@Html.Hidden("routUrl", Url.Content("~/"))
@Html.Hidden("gridList", "ServiceLink/List")

@section Scripts {
<environment>
    <script>
        var isEditServiceLink = @isEditServiceLink.ToString().ToLower();
        var isDeleteServiceLink = @isDeleteServiceLink.ToString().ToLower();
            var serviceOptions = @Html.Raw(Json.Serialize(s_list));
    </script>
    <script src="~/assets/plugins/custom/formrepeater/formrepeater.bundle.js"></script>

    <script src="~/js/ServiceLink/main.js" type="text/javascript" asp-append-version="true"></script>
    <script src="~/assets/plugins/custom/datatables/datatables.bundle.js" type="text/javascript"></script>
    <script src="~/js/dataTable.js" type="text/javascript" asp-append-version="true"></script>
</environment>
}

